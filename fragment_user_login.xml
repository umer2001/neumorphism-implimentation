<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#ffffff">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/img"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/Light"
        app:neomorph_shadow_color="@color/neomorph_shadow_color"
        app:neomorph_highlight_color="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/app_icon"/>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/Light"
        app:neomorph_shadow_color="@color/neomorph_shadow_color"
        app:neomorph_highlight_color="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/img">

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/emailEditText"
            android:hint="email"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pass"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/Light"
        app:neomorph_shadow_color="@color/neomorph_shadow_color"
        app:neomorph_highlight_color="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/email">

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/passwordEditText"
            android:hint="password"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        app:neomorph_view_type="rectangular"
        app:neomorph_shadow_type="outer"
        app:neomorph_elevation="6dp"
        app:neomorph_corner_radius="10dp"
        app:neomorph_background_color="@color/Light"
        app:neomorph_shadow_color="@color/neomorph_shadow_color"
        app:neomorph_highlight_color="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/pass">

        <Button
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:text="Login"
            android:textSize="16dp"
            android:textColor="@color/md_black_1000"
            android:id="@+id/loginButton"/>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/btnLogin"
        android:layout_centerHorizontal="true">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="4dp"
            app:neomorph_corner_radius="30dp"
            app:neomorph_background_color="@color/Light"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_highlight_color="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnLogin">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/com_facebook_button_icon_white"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="4dp"
            app:neomorph_corner_radius="30dp"
            app:neomorph_background_color="@color/Light"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_highlight_color="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnLogin">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/backToLoginTextView"
                android:src="@drawable/messenger_button_white_bg_round"
                />
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
    </LinearLayout>
</RelativeLayout>